{
  "ci": {
    "collect": {
      "numberOfRuns": 2,
      "startServerCommand": "pnpm start -p 3000",
      "url": [
        "http://localhost:3000/"
      ],
      "settings": {
        "preset": "desktop"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "warn",
          {
            "minScore": 0.9
          }
        ],
        "categories:accessibility": [
          "error",
          {
            "minScore": 0.95
          }
        ],
        "categories:best-practices": [
          "warn",
          {
            "minScore": 0.95
          }
        ],
        "categories:seo": [
          "warn",
          {
            "minScore": 0.95
          }
        ]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
